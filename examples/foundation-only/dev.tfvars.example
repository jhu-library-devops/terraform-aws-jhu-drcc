# =============================================================================
# Development Configuration - Foundation Only
# =============================================================================
# Minimal configuration for deploying just the foundation infrastructure.
# All networking, database, and cluster defaults are set in variables.tf.
# Only override values you need to change.
#
# Legend:
#   [REQUIRED]  - You must set this value
#   [OPTIONAL]  - Has a sensible default; override only if needed
# =============================================================================

# --- Identity ---
# organization = "jhu"                       # [OPTIONAL] Default: "jhu"
# project_name = "dspace"                    # [OPTIONAL] Default: "dspace"
environment    = "dev"                       # [REQUIRED] Environment name

# --- VPC (OPTIONAL) ---
# Defaults: 10.0.0.0/16 with 3 public + 3 private subnets.
# Uncomment to override:
# vpc_cidr             = "10.2.0.0/16"
# public_subnet_cidrs  = ["10.2.1.0/24", "10.2.2.0/24"]
# private_subnet_cidrs = ["10.2.11.0/24", "10.2.12.0/24"]

# --- Database (OPTIONAL) ---
# Defaults: db.t3.micro, 20 GB. Suitable for development.
# Uncomment to override:
# db_instance_class    = "db.t3.small"
# db_allocated_storage = 50
